<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/carviewid"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp"
    android:background="#FDFDFD"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageviewid"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/banana"
            android:layout_gravity="center"

     />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           android:layout_marginTop="16dp"

          >
            <TextView
                android:id="@+id/itemnameid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/ubuntu_bold"
                android:maxLines="1"
                android:text="Yellow Banana"
                android:textSize="20sp"
               />
            <TextView
                android:id="@+id/itempricetvid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="180$"
                android:textColor="#E91E63"
                android:textSize="15sp"
           />
            <TextView
                android:id="@+id/itemdescriptiontvid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:maxLines="3"
                android:layout_marginRight="10dp"
                android:text="banana, fruit of the genus Musa, of the family Musaceae, one of the most important fruit crops of the world. The banana is grown in the tropics, and, though it is most widely consumed in those regions, it is valued worldwide for its flavour, nutritional value, and availability throughout the year."
                android:textSize="12sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <Button
                    android:id="@+id/addtocartbtnid"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Add to cart"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#E91E63"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/favourbtnid"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                  android:src="@drawable/favourite"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"

                    />

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>